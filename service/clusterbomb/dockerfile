# Use Python 3.10 slim image as base
FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better Docker layer caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Install longshot library
# Assuming the library is built and available in parent directories
COPY ../../library /tmp/library
RUN pip install -e /tmp/library

# Copy application code
COPY . .

# Create non-root user for security
RUN groupadd -r clusterbomb && useradd -r -g clusterbomb clusterbomb
RUN chown -R clusterbomb:clusterbomb /app
USER clusterbomb

# No exposed ports - this is a job executor, not a web service

# No health check needed for job executor

# Run the MAP-Elites executor
# Default configuration can be overridden with command line arguments
CMD ["python", "run_map_elites.py", "--num-vars", "4", "--width", "3", "--iterations", "100"]